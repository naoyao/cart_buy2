<div class="blockMain2">
  <div class="blockMain2Cartitem">
    <!-- <%= current_user.name %> -->
    <h2 class="cart_itemH2">ショッピングカート</h2>
    <p class="cart_itemH2Child">カートに入りました</p>
  <% @cart_items.each do |cart_item| %>
    <!-- cart_itemの中にある(紐づいている)user_idを使わないと表示されない。 -->
    <% if cart_item.user_id == current_user.id %>
    <%= form_for(@cart_item) do |f| %>
      <dl class="cf">
        <dt>
          <span class="img">
            <%= image_tag cart_item.product.image %>
          </span
          <span class="txt">
            <%= cart_item.product.name %>
          </span>
        </dt>
        <dd>
          <ul>
            <li id="cart_did_52979605" class="cf">
              <div class="cartbox">
                <div class="stock">
                  <p>
                    <span>M / 予約可能 </span>
                  </p>
                  <p class="zozosize ico_sex ico_women">
                    <span class="sizeZ">
                      <span>M サイズ相当</span>
                    </span>
                  </p>
                </div>
            <!-- 「購入数入力欄」 -->
                <div class="number cf">
                  <input class="kazu" id="kazu<%= cart_item.product.id %>" type="text" name="quantity" value="<%= cart_item.quantity %>" tabindex="1" onclick="javascript:spinner('kazu',<%= cart_item.product.id %>);">
                <!-- product＿idの値(value)を送る -->
                  <input class="kazu" id="product<%= cart_item.product_id %>" type="hidden" name="product_id" value= "<%= cart_item.product_id %>" tabindex="1" onclick="javascript:spinner('kazu',<%= cart_item.product_id %>);">

                  <div class="button cf">
                    <input type="button" id="up<%= cart_item.product.id %>" name="spinner_up" class="spinner_up" value="" onclick="javascript:spinner('up',<%= cart_item.product.id %>);">
                    <input type="button" id="down<%= cart_item.product.id %>" name="spinner_up" class="spinner_down" value="" onclick="javascript:spinner('down',<%= cart_item.product.id %>);">
                  </div>
                </div>
              <!-- 「決定ボタン」 -->
                <div class="cart">
                  <span class="btn">
                    <input name="p_seckey" type="submit" value="購入する" class="btn reserveBtn">
                  </span>
                </div>

                <div class="cart_itemCart">
                  <ul class="cf">
                    <li class="cart_itemPrice">
                      ¥<%= cart_item.product.price %>
                    </li>
                    <li class="delete">
                      <a href="#">削除</a>
                    </li>
                  </ul>
                </div>

              </div>
            </li>
          </ul>
        </dd>
    </dl>
  <% end %>
  <% end %>
<% end %>
  <p class="totalSum">商品合計：¥<%= @total_price %></p>
</div>
</div>
